<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7186D3"
    >

    <ImageView
        android:id="@+id/image_criptomoneda"
        android:layout_width="@dimen/item_image_medium_width"
        android:layout_height="@dimen/item_image_medium_height"
        android:layout_marginStart="@dimen/margin_space_16dp"
        android:layout_marginTop="@dimen/margin_space_16dp"
        android:layout_marginBottom="@dimen/margin_space_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_criptomoneda"
        style="@style/TitleMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_space_16dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@id/image_criptomoneda"
        app:layout_constraintEnd_toStartOf="@id/text_precio"
        app:layout_constraintStart_toEndOf="@+id/image_criptomoneda"
        app:layout_constraintTop_toTopOf="@id/image_criptomoneda"
        tools:text="Ethereum" />

    <TextView
        android:id="@+id/text_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_space_16dp"
        android:layout_marginEnd="@dimen/margin_space_16dp"
        style="@style/TitleMedium"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_criptomoneda"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_criptomoneda"
        tools:text="Precio" />


</androidx.constraintlayout.widget.ConstraintLayout>